<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    android:hapticFeedbackEnabled="true"
    tools:context=".Employer_profile">

    <ImageView
        android:id="@+id/employer_profilepic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_employee_profile_home_img" />

    <TextView
        android:id="@+id/Employer_profile_Name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_profilepic" />

    <TextView
        android:id="@+id/employer_profile_Email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Employer_profile_Name" />

    <TextView
        android:id="@+id/employer_profile_Phoneno"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Phone no."
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_profile_Email" />


    <Button
        android:id="@+id/contact_us_button"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:onClick="employer_Call"
        android:soundEffectsEnabled="true"
        android:text="Contact us"
        android:textColorHighlight="#FFFFFF"
        app:backgroundTint="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_profile_Phoneno" />

    <Button
        android:id="@+id/Tnc_button"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:onClick="employer_gotdoc"
        android:soundEffectsEnabled="true"
        android:text="Terms &amp; Conditions"
        android:textColorHighlight="#FFFFFF"
        android:textSize="10dp"
        app:backgroundTint="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_button" />

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="true"
        android:onClick="employer_profile_to_login"
        android:soundEffectsEnabled="true"
        android:text="Sign out"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16dp"
        android:textStyle="italic"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tnc_button" />

    <Button
        android:id="@+id/employee_edit_profile_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:background="@drawable/input_background_shape"
        android:onClick="employer_profile_to_edit_profile"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toStartOf="@+id/signoutbutton"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tnc_button"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg"
        app:itemIconSize="32dp"
        app:itemIconTint="@drawable/item_selecter"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_view_pdf"
        app:menu="@menu/employer_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>