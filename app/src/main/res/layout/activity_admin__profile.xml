<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    android:hapticFeedbackEnabled="true"
    tools:context=".Admin_Profile">


    <ImageView
        android:id="@+id/Admin_profilepic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/ic_employee_profile_home_img" />

    <TextView
        android:id="@+id/Admin_profile_Name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Admin_profilepic" />

    <TextView
        android:id="@+id/Admin_profile_Email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/Admin_profile_Phoneno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Admin_profile_Name" />

    <TextView
        android:id="@+id/Admin_profile_Phoneno"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/input_background_shape"
        android:gravity="center"
        android:text="Phone no."
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_contact_us_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/admin_contact_us_button"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="412dp"
        android:layout_marginBottom="8dp"
        android:onClick="admin_Call"
        android:soundEffectsEnabled="true"
        android:text="Contact us"
        android:textColorHighlight="#FFFFFF"
        app:backgroundTint="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/admin_Tnc_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admin_Tnc_button"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:onClick="admin_gotdoc"
        android:soundEffectsEnabled="true"
        android:text="Terms &amp; Conditions"
        android:textColorHighlight="#FFFFFF"
        android:textSize="10dp"
        app:backgroundTint="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="true"
        android:onClick="admin_profile_to_login"
        android:soundEffectsEnabled="true"
        android:text="Sign out"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="16dp"
        android:textStyle="italic"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_Tnc_button" />

    <Button
        android:id="@+id/Admin_edit_profile_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/input_background_shape"
        android:onClick="admin_profile_to_edit_profile"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/signoutbutton"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_Tnc_button" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg"
        app:itemIconSize="32dp"
        app:itemIconTint="@drawable/item_selecter"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer_view_pdf"
        app:menu="@menu/admin_nav" />
    </androidx.constraintlayout.widget.ConstraintLayout>